@{
    Layout = "_Layout";
    ViewData["Title"] = "Главная - Поликлиника";
}

@section Styles {
    <link href="~/css/common.css" rel="stylesheet" />
}

<div class="text-center">
    <h1 class="display-4 mb-4">Добро пожаловать в поликлинику</h1>
    <p class="lead mb-5">Современная система управления медицинским учреждением</p>

    @if (Context.Session.GetInt32("UserId") == null)
    {
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Начните работу с системой</h5>
                        <p class="card-text">Войдите в систему или зарегистрируйтесь как пациент</p>
                        <div class="d-grid gap-2">
                            <a href="@Url.Action("Login", "Auth")" class="btn btn-primary btn-lg">Войти в систему</a>
                            <a href="@Url.Action("Register", "Auth")" class="btn btn-outline-primary btn-lg">Зарегистрироваться</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Добро пожаловать, @Context.Session.GetString("UserName")!</h5>
                        <p class="card-text">Вы вошли в систему как: <strong>@Context.Session.GetString("UserRole")</strong></p>
                        @{
                            var dashboardAction = Context.Session.GetString("UserRole") == "Patient" ? "Dashboard" : "Dashboard";
                            var dashboardController = Context.Session.GetString("UserRole") == "Patient" ? "Patient" : "Doctor";
                        }
                        <a href="@Url.Action(dashboardAction, dashboardController)" class="btn btn-primary btn-lg">
                            Перейти в панель управления
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">👨‍⚕️ Врачи</h5>
                    <p class="card-text">Квалифицированные специалисты различных направлений</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">📅 Запись онлайн</h5>
                    <p class="card-text">Удобная запись на прием в любое время</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">🏥 Медкарты</h5>
                    <p class="card-text">Электронные медицинские карты пациентов</p>
                </div>
            </div>
        </div>
    </div>
</div>