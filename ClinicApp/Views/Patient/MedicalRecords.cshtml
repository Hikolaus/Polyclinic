@model List<ClinicApp.Models.Core.MedicalRecord>
@{
    ViewData["Title"] = "Медицинская карта";
}

<div class="container mt-4">
    <h2><i class="fas fa-file-medical-alt me-2"></i>Моя медицинская карта</h2>

    @if (Model.Any())
    {
        <div class="accordion mt-4" id="medAcc">
            @foreach (var r in Model)
            {
                <div class="accordion-item mb-3 border shadow-sm">
                    <h2 class="accordion-header" id="head-@r.Id">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#c-@r.Id">
                            <div class="d-flex flex-column w-100">
                                <div class="d-flex justify-content-between align-items-center me-3">
                                    <span class="fw-bold text-primary">@r.Diagnosis</span>
                                    <span class="badge bg-light text-dark border">@r.RecordDate.ToString("dd.MM.yyyy")</span>
                                </div>
                                <small class="text-muted mt-1">
                                    <i class="fas fa-user-md me-1"></i> Врач: @(r.Appointment?.Doctor?.User?.FullName ?? "Неизвестно")
                                    <span class="mx-1">|</span>
                                    @(r.Appointment?.Doctor?.Specialization?.Name ?? "-")
                                </small>
                            </div>
                        </button>
                    </h2>
                    <div id="c-@r.Id" class="accordion-collapse collapse" data-bs-parent="#medAcc">
                        <div class="accordion-body">
                            <div class="row">

                                <div class="col-md-6 border-end">
                                    <h6 class="text-secondary fw-bold text-uppercase small mb-3">Осмотр</h6>

                                    <p class="mb-1"><strong>Жалобы:</strong></p>
                                    <p class="text-muted bg-light p-2 rounded">@r.Complaints</p>

                                    <p class="mb-1"><strong>Симптомы:</strong></p>
                                    <p class="text-muted bg-light p-2 rounded">@r.Symptoms</p>
                                </div>

                                <div class="col-md-6">
                                    <h6 class="text-success fw-bold text-uppercase small mb-3">Назначения и лечение</h6>

                                    <div class="mb-3">
                                        <strong><i class="fas fa-procedures me-1"></i> Лечение:</strong><br>
                                        @r.Treatment
                                    </div>

                                    <div class="mb-3">
                                        <strong><i class="fas fa-lightbulb me-1"></i> Рекомендации:</strong><br>
                                        @r.Recommendations
                                    </div>

                                    @if (r.Appointment?.Prescriptions.Any() == true)
                                    {
                                        <div class="mt-4 pt-3 border-top">
                                            <h6 class="fw-bold mb-2"><i class="fas fa-pills me-1"></i> Выписанные лекарства:</h6>
                                            <div class="table-responsive">
                                                <table class="table table-sm table-borderless mb-0">
                                                    <tbody>
                                                        @foreach (var p in r.Appointment.Prescriptions)
                                                        {
                                                            <tr class="align-middle">
                                                                <td class="fw-bold">@p.Medication?.Name</td>
                                                                <td>@p.Dosage</td>
                                                                <td class="text-end">
                                                                    @if (p.Medication?.PrescriptionRequired == true)
                                                                    {
                                                                        <span class="badge bg-danger">По рецепту</span>
                                                                    }
                                                                    else
                                                                    {
                                                                        <span class="badge bg-success">Назначение</span>
                                                                    }
                                                                </td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info mt-4 text-center p-4">
            <i class="fas fa-folder-open fa-2x mb-3"></i>
            <h5>Медицинская карта пуста</h5>
            <p>Здесь появятся записи после посещения врача.</p>
        </div>
    }
</div>