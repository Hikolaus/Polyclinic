@using ClinicApp.Services.Core
@inject INotificationService NotificationService

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Поликлиника</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <link href="~/css/layout.css" rel="stylesheet" />
    <link href="~/css/common.css" rel="stylesheet" />

    @if (IsSectionDefined("Styles"))
    {
        @await RenderSectionAsync("Styles", required: false)
    }
</head>
<body class="d-flex flex-column min-vh-100">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <i class="fas fa-hospital me-2"></i>Поликлиника
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    @if (Context.Session.GetInt32("UserId") != null)
                    {
                        var role = Context.Session.GetString("UserRole");
                        if (role == "Patient")
                        {
                            <li class="nav-item"><a class="nav-link" href="/Patient/Dashboard"><i class="fas fa-home me-1"></i>Панель пациента</a></li>
                            <li class="nav-item"><a class="nav-link" href="/Patient/MyAppointments"><i class="fas fa-calendar-check me-1"></i>Мои записи</a></li>
                            <li class="nav-item"><a class="nav-link" href="/Patient/MedicalRecords"><i class="fas fa-file-medical me-1"></i>Медкарта</a></li>
                        }
                        else if (role == "Doctor")
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Doctor/Dashboard">
                                    <i class="fas fa-user-md me-1"></i>Панель врача
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Doctor/Appointments">
                                    <i class="fas fa-calendar-alt me-1"></i>Записи
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Doctor/Patients">
                                    <i class="fas fa-users me-1"></i>Пациенты
                                </a>
                            </li>
                        }
                        else if (role == "Administrator")
                        {
                            <li class="nav-item"><a class="nav-link" href="/Admin/Dashboard"><i class="fas fa-chart-line me-1"></i>Дашборд</a></li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-database me-1"></i> Справочники
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="/Admin/Medications">Лекарства</a></li>
                                    <li><a class="dropdown-item" href="/Admin/Specializations">Специализации</a></li>
                                    <li><a class="dropdown-item" href="/Admin/Diagnoses">Диагнозы (МКБ)</a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user-tie me-1"></i> Персонал
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="/Admin/Users">Все пользователи</a></li>
                                    <li><a class="dropdown-item" href="/Admin/RegisterDoctor">Регистрация врача</a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-calendar-alt me-1"></i> Расписание
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="/Admin/Schedules">Обзор графиков</a></li>
                                    <li><a class="dropdown-item" href="/Admin/BulkSchedule">Генератор</a></li>
                                </ul>
                            </li>
                        }
                    }
                </ul>

                <ul class="navbar-nav">
                    @if (Context.Session.GetInt32("UserId") != null)
                    {
                        var userId = Context.Session.GetInt32("UserId").Value;
                        var unreadCount = await NotificationService.GetUnreadCount(userId);
                        var hasUnread = unreadCount > 0;

                        <li class="nav-item">
                            <span class="nav-link text-light">
                                <i class="fas fa-user me-1"></i> @Context.Session.GetString("UserName")
                            </span>
                        </li>

                        <li class="nav-item position-relative mx-2">
                            <a class="nav-link @(hasUnread ? "text-warning fw-bold notification-active" : "")"
                               href="/Notifications" id="notificationLink">

                                <i class="fas fa-bell fa-lg @(hasUnread ? "bell-shake" : "")"></i>

                                <span class="d-lg-none ms-2">Уведомления</span>

                                @if (hasUnread)
                                {
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger"
                                          style="font-size: 0.65rem; margin-top: 10px; margin-left: -5px;" id="notificationBadge">
                                        @unreadCount
                                    </span>
                                }
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/Auth/Logout"><i class="fas fa-sign-out-alt me-1"></i>Выход</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" href="/Auth/Login"><i class="fas fa-sign-in-alt me-1"></i>Вход</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Auth/Register"><i class="fas fa-user-plus me-1"></i>Регистрация</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <main role="main" class="container mt-5 pt-4 flex-grow-1">
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                @ViewBag.Message
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @RenderBody()
    </main>

    <footer class="footer py-3 bg-dark text-white mt-auto">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5>Поликлиника</h5>
                    <p>Система управления медицинским учреждением</p>
                </div>
                <div class="col-md-6 text-end">
                    <p>&copy; @DateTime.Now.Year - Поликлиника</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/layout.js"></script>

    @if (IsSectionDefined("Scripts"))
    {
        @await RenderSectionAsync("Scripts", required: false)
    }
</body>
</html>