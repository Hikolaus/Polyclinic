@model ClinicApp.Models.Core.Prescription
@{
    ViewData["Title"] = "Выписать рецепт";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-success">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">Новый рецепт</h4>
                </div>
                <div class="card-body">
                    <form asp-controller="Prescriptions" asp-action="Create" method="post">

                        <div class="mb-3">
                            <label class="form-label">ID Пациента</label>
                            <input asp-for="PatientId" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">ID Препарата</label>
                            <input asp-for="MedicationId" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Дозировка</label>
                            <input asp-for="Dosage" class="form-control" placeholder="Например: 1 таб. 2 раза в день" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Инструкции</label>
                            <textarea asp-for="Instructions" class="form-control" rows="2"></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Действителен до</label>
                            <input asp-for="ExpiryDate" type="date" class="form-control" required />
                        </div>

                        <div class="d-grid">
                            <button class="btn btn-success btn-lg">Выписать рецепт</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>