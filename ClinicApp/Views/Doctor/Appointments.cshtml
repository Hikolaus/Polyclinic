@model List<ClinicApp.Models.Core.Appointment>
@{
    ViewData["Title"] = "Записи на прием";
}

<h2>Записи на прием</h2>

<div class="card mb-4">
    <div class="card-body">
        <form action="/Doctor/Appointments" method="get" class="row g-3">
            <div class="col-md-3">
                <input type="date" name="date" class="form-control" value="@Context.Request.Query["date"]">
            </div>
            <div class="col-md-3">
                <select name="status" class="form-control">
                    <option value="">Все статусы</option>
                    <option value="Scheduled" selected="@(Context.Request.Query["status"] == "Scheduled")">Запланирован</option>
                    <option value="InProgress" selected="@(Context.Request.Query["status"] == "InProgress")">В процессе</option>
                    <option value="Completed" selected="@(Context.Request.Query["status"] == "Completed")">Завершен</option>
                    <option value="NoShow" selected="@(Context.Request.Query["status"] == "NoShow")">Неявка</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">Фильтр</button>
            </div>
        </form>
    </div>
</div>

@if (Model.Any())
{
    <table class="table table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>Дата и время</th>
                <th>Пациент</th>
                <th>Причина</th>
                <th>Статус</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.AppointmentDateTime.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>
                        <strong>@(item.Patient?.User?.FullName ?? "Неизвестно")</strong>
                        <br />
                        <small class="text-muted">@(item.Patient?.DateOfBirth.ToString("dd.MM.yyyy") ?? "")</small>
                    </td>
                    <td>@item.Reason</td>
                    <td>
                        @switch (item.Status)
                        {
                            case ClinicApp.Models.Core.AppointmentStatus.Scheduled:
                                <span class="badge bg-primary">Запланирован</span>
                                break;
                            case ClinicApp.Models.Core.AppointmentStatus.InProgress:
                                <span class="badge bg-warning text-dark">Идет прием</span>
                                break;
                            case ClinicApp.Models.Core.AppointmentStatus.Completed:
                                <span class="badge bg-success">Завершен</span>
                                break;
                            case ClinicApp.Models.Core.AppointmentStatus.NoShow:
                                <span class="badge bg-secondary">Неявка</span>
                                break;
                            case ClinicApp.Models.Core.AppointmentStatus.Cancelled:
                                <span class="badge bg-danger">Отменен</span>
                                break;
                            default:
                                <span class="badge bg-light text-dark">@item.Status</span>
                                break;
                        }
                    </td>
                    <td>
                        <div class="btn-group">
                            @if (item.Status == ClinicApp.Models.Core.AppointmentStatus.Scheduled ||
                                                item.Status == ClinicApp.Models.Core.AppointmentStatus.Confirmed)
                            {
                                <a href="/Doctor/Consultation?id=@item.Id" class="btn btn-success btn-sm">
                                    <i class="fas fa-play me-1"></i> Начать
                                </a>

                                <form action="/Doctor/MarkNoShow" method="post" style="display:inline; margin-left: 5px;">
                                    @Html.AntiForgeryToken()
                                    
                                    <input type="hidden" name="appointmentId" value="@item.Id" />
                                    <button type="submit" class="btn btn-outline-secondary btn-sm"
                                            onclick="return confirm('Отметить как неявку?');">
                                        Не явился
                                    </button>
                                </form>
                            }
                            else if (item.Status == ClinicApp.Models.Core.AppointmentStatus.InProgress)
                            {
                                <a href="/Doctor/Consultation?id=@item.Id" class="btn btn-warning btn-sm">Продолжить</a>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">Записей не найдено.</div>
}