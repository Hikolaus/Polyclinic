@model List<ClinicApp.Models.DoctorModels.Doctor>
@{
    ViewData["Title"] = "Управление расписанием";
}

<div class="container mt-4">
    <h2><i class="fas fa-calendar-check me-2"></i>Расписания врачей</h2>
    <p class="text-muted">Выберите врача для настройки графика работы.</p>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th>ФИО Врача</th>
                        <th>Специализация</th>
                        <th>Активных слотов</th>
                        <th class="text-end">Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var doc in Model)
                        {
                            <tr>
                                <td class="fw-bold">@(doc.User?.FullName ?? "Нет данных")</td>
                                <td>@(doc.Specialization?.Name ?? "-")</td>
                                <td>
                                    @if (doc.Schedules != null && doc.Schedules.Any(s => s.IsActive))
                                    {
                                        <span class="badge bg-success">@doc.Schedules.Count(s => s.IsActive) слотов</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Нет графика</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <a href="@Url.Action("EditSchedule", "Admin", new { doctorId = doc.Id })"
                                       class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-cog me-1"></i> Настроить
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted p-3">Список врачей пуст</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>