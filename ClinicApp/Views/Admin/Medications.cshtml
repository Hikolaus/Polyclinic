@model List<ClinicApp.Models.Core.Medication>
@{
    ViewData["Title"] = "Справочник лекарств";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-pills me-2"></i>Справочник лекарств</h2>
    </div>

    <div class="card mb-4 shadow-sm border-0">
        <div class="card-body bg-light rounded">
            <div class="row g-3">
                <div class="col-md-6">
                    <form action="/Admin/Medications" method="get">
                        <div class="input-group">
                            <span class="input-group-text bg-white border-end-0"><i class="fas fa-search text-muted"></i></span>
                            <input type="text" name="search" class="form-control border-start-0 ps-0"
                                   placeholder="Найти лекарство..." value="@Context.Request.Query["search"]">
                            <button class="btn btn-primary" type="submit">Найти</button>
                        </div>
                    </form>
                </div>

                <div class="col-md-6 text-end">
                    <button class="btn btn-success" type="button" data-bs-toggle="collapse" data-bs-target="#addMedForm">
                        <i class="fas fa-plus me-1"></i> Добавить лекарство
                    </button>
                </div>
            </div>

            <div class="collapse mt-3" id="addMedForm">
                <div class="card card-body border-success">
                    <h6 class="card-title text-success mb-3">Новый препарат</h6>
                    <form action="/Admin/AddMedication" method="post" class="row g-3">
                        @Html.AntiForgeryToken()

                        <div class="col-md-4">
                            <input type="text" name="Name" class="form-control" placeholder="Название (напр. Аспирин)" required>
                        </div>
                        <div class="col-md-3">
                            <input type="text" name="Form" class="form-control" placeholder="Форма (напр. Таблетки)" required>
                        </div>
                        <div class="col-md-3">
                            <input type="text" name="Manufacturer" class="form-control" placeholder="Производитель">
                        </div>
                        <div class="col-md-2 d-flex align-items-center">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="PrescriptionRequired" value="true" id="presCheck">
                                <label class="form-check-label" for="presCheck">По рецепту</label>
                            </div>
                        </div>
                        <div class="col-12 text-end">
                            <button type="submit" class="btn btn-success">Сохранить</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Название</th>
                        <th>Форма</th>
                        <th>Производитель</th>
                        <th>Доступ</th>
                        <th class="text-end">Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var m in Model)
                        {
                            <tr>
                                <td class="fw-bold">@m.Name</td>
                                <td>@m.Form</td>
                                <td>@m.Manufacturer</td>
                                <td>
                                    @if (m.PrescriptionRequired)
                                    {
                                        <span class="badge bg-danger">Рецепт</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Свободно</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <button class="btn btn-sm btn-outline-primary me-1"
                                            data-bs-toggle="modal"
                                            data-bs-target="#editMedModal"
                                            data-id="@m.Id"
                                            data-name="@m.Name"
                                            data-form="@m.Form"
                                            data-manuf="@m.Manufacturer"
                                            data-presc="@m.PrescriptionRequired">
                                        <i class="fas fa-edit"></i>
                                    </button>

                                    <form action="/Admin/DeleteMedication" method="post" onsubmit="return confirm('Удалить?');" style="display:inline;">
                                        @Html.AntiForgeryToken()

                                        <input type="hidden" name="id" value="@m.Id" />
                                        <button class="btn btn-sm btn-outline-danger border-0"><i class="fas fa-trash"></i></button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted p-4">Лекарства не найдены</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="editMedModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title"><i class="fas fa-edit me-2"></i>Редактировать лекарство</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form action="/Admin/UpdateMedication" method="post">
                @Html.AntiForgeryToken()

                <div class="modal-body">
                    <input type="hidden" name="Id" id="editId" />

                    <div class="mb-3">
                        <label class="form-label">Название</label>
                        <input type="text" name="Name" id="editName" class="form-control" required>
                    </div>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Форма</label>
                            <input type="text" name="Form" id="editForm" class="form-control" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Производитель</label>
                            <input type="text" name="Manufacturer" id="editManuf" class="form-control">
                        </div>
                    </div>
                    <div class="mt-3 form-check">
                        <input class="form-check-input" type="checkbox" name="PrescriptionRequired" value="true" id="editPresc">
                        <label class="form-check-label" for="editPresc">Требуется рецепт</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                    <button type="submit" class="btn btn-primary">Сохранить</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var editModal = document.getElementById('editMedModal');
        editModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;

            var id = button.getAttribute('data-id');
            var name = button.getAttribute('data-name');
            var form = button.getAttribute('data-form');
            var manuf = button.getAttribute('data-manuf');
            var presc = button.getAttribute('data-presc');

            document.getElementById('editId').value = id;
            document.getElementById('editName').value = name;
            document.getElementById('editForm').value = form;
            document.getElementById('editManuf').value = manuf;

            document.getElementById('editPresc').checked = (presc === 'True');
        });
    });
</script>