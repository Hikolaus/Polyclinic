@model List<ClinicApp.Models.Core.Specialization>
@{
    ViewData["Title"] = "Специализации";
}

<div class="container mt-4">
    <h2><i class="fas fa-briefcase-medical me-2"></i>Специализации врачей</h2>

    <div class="card mb-4 mt-3 border-info shadow-sm">
        <div class="card-header bg-info text-white fw-bold">Добавить специализацию</div>
        <div class="card-body">
            <form action="/Admin/AddSpecialization" method="post" class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label small">Название</label>
                    <input type="text" name="Name" class="form-control" placeholder="напр. Уролог" required>
                </div>
                <div class="col-md-4">
                    <label class="form-label small">Описание</label>
                    <input type="text" name="Description" class="form-control" placeholder="Краткое описание">
                </div>
                <div class="col-md-2">
                    <label class="form-label small">Время (мин)</label>
                    <input type="number" name="AverageConsultationTime" class="form-control" value="15" min="5" step="5">
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-info w-100 text-white">Добавить</button>
                </div>
            </form>
        </div>
    </div>

    <div class="list-group shadow-sm">
        @foreach (var s in Model)
        {
            <div class="list-group-item d-flex justify-content-between align-items-center">
                <div class="me-auto">
                    <h6 class="mb-0 fw-bold">@s.Name</h6>
                    <small class="text-muted">@s.Description</small>
                </div>

                <form action="/Admin/UpdateSpecializationTime" method="post" class="d-flex align-items-center me-3">
                    <input type="hidden" name="id" value="@s.Id" />
                    <div class="input-group input-group-sm" style="width: 130px;">
                        <input type="number" name="minutes" class="form-control text-center"
                               value="@s.AverageConsultationTime" min="5" step="5">
                        <span class="input-group-text">мин</span>
                        <button class="btn btn-outline-secondary" type="submit" title="Сохранить время">
                            <i class="fas fa-save"></i>
                        </button>
                    </div>
                </form>

                <form action="/Admin/DeleteSpecialization" method="post" onsubmit="return confirm('Удалить специализацию?');">
                    <input type="hidden" name="id" value="@s.Id" />
                    <button class="btn btn-sm btn-outline-danger border-0"><i class="fas fa-trash"></i></button>
                </form>
            </div>
        }
    </div>
</div>